{
  "name": "dots-website",
  "version": "1.0.0",
  "description": "Decentral Patterns Website",
  "repository": {
    "type": "git",
    "url": "https://github.com/simplysecure/dots-website"
  },
  "author": "Simply Secure",
  "license": "CC0-1.0",
  "private": true,
  "scripts": {
    "clean": "rimraf dist js css",
    "dev": "ELEVENTY_ENV=development npx @11ty/eleventy --config=eleventy.config.js --serve & webpack --watch --progress --config=webpack.config.js",
    "production": "NODE_ENV=production webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js && npx @11ty/eleventy --config=eleventy.config.js",
    "lint": "eslint .",
    "prettier": "prettier --write .",
    "start": "cross-env NODE_ENV=development npm-run-all --silent clean --parallel start:*",
    "start:webpack": "webpack serve --config=webpack.config.js",
    "start:eleventy": "ELEVENTY_ENV=development eleventy --watch --quiet --port 8082 --config=eleventy.config.js",
    "build": "cross-env NODE_ENV=production npm-run-all -l clean build:*",
    "build:webpack": "webpack",
    "build:eleventy": "eleventy --config=eleventy.config.js"
  },
  "dependencies": {
    "autoprefixer": "^9.8.6",
    "@11ty/eleventy": "^0.10.0",
    "html-minifier": "^4.0.0",
    "laravel-mix": "^5.0.5",
    "laravel-mix-purgecss": "^4.2.0",
    "markdown-it": "^11.0.0",
    "markdown-it-anchor": "^5.3.0",
    "markdown-it-footnote": "^3.0.2",
    "tailwindcss": "^1.3.0",
    "vue-template-compiler": "^2.6.10"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "mini-css-extract-plugin": "^1.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.8",
    "postcss-custom-properties": "^10.0.0",
    "postcss-import": "^13.0.0",
    "postcss-nested": "^5.0.1",
    "prettier": "^2.1.2",
    "resolve-url-loader": "^3.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.29.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^2.0.0",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
