---
layout: default
---

<main class="inner pattern">
  <a class="link-prev link-small" href="/patterns">
    <img role="presentation" src="/images/icons/back.svg" />
    <div>
      Go back to pattern index
    </div>
  </a>

  <h1>{{ title }}</h1>

  <section class="pattern-head">
    <div class="pattern-illustration pattern-content">
      <img role="presentation" src="./illustration.svg" />
    </div>

    <div class="pattern-meta pattern-sidebar">
      <div class="pattern-published">
        <em>Last Updated</em>
        <div>01 / 20 / 2020</div>
      </div>

      <div class="pattern-related-patterns">
        <em>Related patterns</em>
        <ul class="pattern-related-patterns">
          <li class="pattern-related-pattern">
            <span>Sharing is caring</span>
            <a class="link-reference" href="/">View</a>
          </li>
          <li class="pattern-related-pattern">
            <span>Network health indicator</span>
            <a class="link-reference" href="/">View</a>
          </li>
        </ul>
      </div>

      <div class="pattern-cta">
        <a class="link-next" href='/contribute'>
          <span>Want to contribute? Learn more about our library.</span>
          <img src="/images/icons/forward.svg" />
        </a>
      </div>
    </div>
  </section>

  <section class="pattern-main">
    <article class="pattern-content content markdown">
      {{ content | safe }}
    </article>

    <div class="pattern-sidebar">
      {% if tags | length > 1 %}
        <div class="pattern-tags">
          <em>Tags</em>
          <ul>
            {% for tag in tags %}
              {% if tag !== 'pattern' %}
                <li>
                  <a class="btn btn-sm btn-pill" href="/topics/{{ tag | urlencode }}">{{ tag | capitalize }}</a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </div>
  </section>
</main>
